<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Śluber</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-image: url('../pictures/tło.jpg'); background-repeat: no-repeat; background-size: cover">
    <header style="background-color: ghostwhite">
       @Html.Partial("_NavBar")
    </header>
    <div class="container" >
        <div style="background-color:ghostwhite; background: rgba(248, 248, 255, 0.70) ">
        <main role="main" class="pb-3" style="height:100%; width:100%; ">
            @RenderBody()
        </main>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="background-color: ghostwhite">
        <div class="container">
            &copy; 2019 - Śluber - <a asp-area="" asp-controller="Home" asp-action="Privacy">Prywatność</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
