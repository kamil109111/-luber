@model IEnumerable<Śluber.Models.Errand>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista zadań</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErrandDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErrandStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErrandPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrandDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrandStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrandPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
