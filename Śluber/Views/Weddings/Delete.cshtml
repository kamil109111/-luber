        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeddingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeddingPlace)
        </dt>
        <dd class = "col-sm-10">
