        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WifeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WifeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HusbandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HusbandName)
        </dd>
        <dt class = "col-sm-2">
